<%= form_with(model: user, url: team_user_path) do |form| %>
  <% if user.errors.any? %>
    <%= render partial: "model_errors", locals: { model: user, team: } %>
  <% end %>

  <fieldset class="cm-fieldset">
    <div class="cm-fieldset__element fr-input-group">
      <%= form.label :name, t(:name), class: "fr-label" %>
      <%= form.text_field :name, class: "fr-input" %>
    </div>

    <div class="cm-fieldset__element fr-input-group">
      <%= form.label :email, t(:email), class: "fr-label" %>
      <%= form.text_field :email, class: "fr-input" %>
    </div>

    <div class="cm-fieldset__element fr-select-group">
      <%= form.label :role, t(".role"), class: "fr-label" %>
      <%= form.select :role, roles_collection, {}, class: "fr-select" %>
    </div>
  </fieldset>

  <fieldset class="cm-fieldset">
    <div class="cm-fieldset__element cm-btns-group">
      <%= form.submit t(".update"), class: "cm-btn" %>
    </div>
  </fieldset>
<% end %>
