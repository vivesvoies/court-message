<%= form_with(model: user, url: team_user_path, method: :patch) do |form| %>
  <% if user.errors.any? %>
    <%= render partial: "model_errors", locals: { model: user, team: } %>
  <% end %>  

  <fieldset class="cm-fieldset">

    <div class="cm-fieldset__element cm-input-group">
      <%= form.label :name, t(:name), class: "cm-label" %>
      <%= form.text_field :name, class: "cm-input" %>
    </div>

    <div class="cm-fieldset__element cm-input-group">
      <%= form.label :phone, t(:phone), class: "cm-label" %>
      <%= form.text_field :phone, class: "cm-input" %>
    </div>

    <div class="cm-fieldset__element cm-input-group">
      <%= form.label :email, t(:email), class: "cm-label" %>
      <%= form.text_field :email, class: "cm-input" %>
    </div>
  </fieldset>

  <div class="UserForm_actions">
    <%= button_tag t(:update), type: 'submit', class: "cm-btn cm-btn--pomme cm-btn--icon-left cm-icon-checkmark" %>

    <%= link_to t(:cancel), team_path(@team), class: "cm-btn cm-btn--tertiary" %>

    <%= link_to membership_path(Membership.find_by(user: user.id, team: @team.id).id),
              data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure?"
              },
              class: "cm-btn cm-btn--secondary cm-btn--secondary-robin" do %>
      <i class="cm-icon-cross cm-icon--sm"></i>&nbsp;
      <%= t("users.form.remove") %>
    <% end if can? :destroy, user %>

  </div>
<% end %>
