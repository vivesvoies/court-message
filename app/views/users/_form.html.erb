<%= form_with(model: user, url: team_user_path, method: :patch) do |form| %>
  <% if user.errors.any? %>
    <%= render partial: "model_errors", locals: { model: user, team: } %>
  <% end %>  

  <fieldset class="cm-fieldset">
    <div class="cm-fieldset__element fr-input-group">
      <%= form.label :name, t(:name), class: "fr-label" %>
      <%= form.text_field :name, class: "fr-input" %>
    </div>

    <div class="cm-fieldset__element fr-input-group">
      <%= form.label :phone, t(:phone), class: "fr-label" %>
      <%= form.text_field :phone, class: "fr-input" %>
    </div>

    <div class="cm-fieldset__element fr-input-group">
      <%= form.label :email, t(:email), class: "fr-label" %>
      <%= form.text_field :email, class: "fr-input" %>
    </div>
  </fieldset>

  <div class="Block Block__team-members">
    <%= button_tag type: 'submit', class: "cm-btn cm-btn--pomme" do %>
      <i class="cm-icon-checkmark cm-icon--sm"></i>&nbsp;
      <%= t(:update) %>
    <% end %>

    <%= link_to t(:cancel), team_users_path, class: "cm-btn cm-btn--secondary" %>

    <%= link_to membership_path(Membership.find_by(user: user.id, team: Current.team.id).id),
              data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure?"
              },
              class: "cm-btn cm-btn--secondary cm-btn--secondary-robin" do %>
      <i class="cm-icon-cross cm-icon--sm"></i>&nbsp;
      <%= t("users.form.remove") %>
    <% end if can? :destroy, user %>

  </div>
<% end %>
