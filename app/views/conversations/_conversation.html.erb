<div class="Conversation">
  <%= link_to conversation, class: "Conversation__link", data: { turbo_frame: "conversation" } do %>
    <div class="Conversation__contact">
      <%= conversation.contact.name_or_phone %>
    </div>
    <div class="Conversation__latest">
      <%= time_ago_in_words conversation.updated_at %>
    </div>
    <div class="Conversation__sub <%= last_message_class_for conversation %>">
      <%= last_message_extract_for conversation %>
    </div>
  <% end %>
</div>