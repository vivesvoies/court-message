<%= turbo_frame_tag @contact, class: "ContactDetail" do %>
  <%= form_with(model: contact) do |form| %>
    <% if contact.errors.any? %>
      <div id="error_explanation" class="fr-fieldset__element FormErrors">
        <p class="fr-error-text"><%= t(".save_error") %></p>
        <ul>
          <% contact.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <%= hidden_field_tag :create_conversation, @create_conversation %>
  
    <fieldset class="fr-fieldset">
      <div class="fr-fieldset__element fr-input-group">
        <%= form.label :name, "Nom", class: "Contact__label-name fr-label" %>
        <%= form.text_field :name, class: "fr-input" %>
      </div>
      
      <div class="fr-fieldset__element fr-input-group">
        <%= form.label :phone, "Numéro de téléphone", class: "Contact__label-phone fr-label" %>
        <%= form.text_field :phone, class: "fr-input" %>
      </div>
      
      <div class="fr-fieldset__element fr-input-group">
        <%= form.label :email, "Adresse email", class: "Contact__label-email fr-label" %>
        <%= form.text_field :email, class: "fr-input" %>
      </div>
    </fieldset>
  
    <fieldset class="fr-fieldset">
      <div class="fr-fieldset__element fr-btns-group">
        <%= form.submit contact.new_record? ? t(".create") : t(".update"), class: "fr-btn" %>
      </div>
    </fieldset>
  <% end %>
<% end %>