<%= turbo_frame_tag "contacts" do %>
  <div class="Page Page__show-contact">
    <div class="Block Block__show-contact">
      <%= link_to team_contacts_path do %>
        <i class="cm-icon-chevrons-left cm-icon--sm"></i>
      <% end %>

      <h1><%= @contact.name %></h1>
      
      <div class="">

        <%= link_to t(".edit"), edit_team_contact_path, class: "ContactDetail__edit-btn cm-btn cm-btn--sm cm-btn--secondary" %>
      </div>

      <%= render partial: "contact_detail", contact: @contact %>
      <ul class="ContactDetail__actions cm-btns-group cm-btns-group--icon-left">

      </ul>
    </div>
  </div>
<% end %>
