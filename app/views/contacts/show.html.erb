<div class="Page Page__show-contact">
  <div class="Block Block__show-contact">
    <%= turbo_frame_tag @contact, class: "ContactDetail" do %>
      <%= render "turbo_flash" %>
      <%= render @contact %>
      <ul class="ContactDetail__actions cm-btns-group cm-btns-group--icon-left">
        <li>
          <%= link_to t(".edit"), edit_contact_path(@contact), class: "ContactDetail__edit-btn cm-btn cm-btn--sm cm-btn--icon-left fr-icon-pencil-fill" %>
        </li>
        <li>
          <%= button_to t(".destroy"), @contact, method: :delete, class: "ContactDetail__destroy-btn cm-btn cm-btn--sm cm-btn--secondary", data: { turbo_confirm: t(".confirm_destroy") } %>
        </li>
      </ul>
    <% end %>
  </div>
</div>
