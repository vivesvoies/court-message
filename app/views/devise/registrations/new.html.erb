<%= content_for :back do %>
  <%= link_to t(:back), root_path, class: "cm-btn cm-btn--icon-left fr-icon-arrow-left-line" %>
<% end %>
<%= render partial: "menu" %>
<div class="Page Page__sign-up">
  <div class="Block Block__sign-up">
    <h1><%= t(".sign_up") %></h1>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      
      <fieldset class="cm-fieldset">
        <%= render "devise/shared/error_messages", resource: resource %>
      
        <div class="cm-fieldset__element fr-input-group">
          <%= f.label :email, class: "fr-label" do %>
            <%= t("devise.shared.forms.identifier") %>
            <span class="cm-hint-text"><%= t("devise.shared.forms.id_hint") %></span>
          <% end %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", aria_required: true, class: "fr-input" %>
        </div>
      
        <div class="cm-fieldset__element fr-input-group">
          <%= f.label :password, class: "fr-label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "fr-input fr-password__input", aria_required: true %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> <%= t("devise.shared.forms.min_char") %>)</em>
          <% end %>
        </div>
      
        <div class="cm-fieldset__element fr-input-group">
          <%= f.label :password_confirmation, class: "fr-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "fr-input fr-password__input", aria_required: true %>
        </div>
      </fieldset>
      
      <fieldset class="cm-fieldset">
        <div class="cm-fieldset__element cm-btns-group cm-btns-group--right cm-btns-group--inline">
          <%= f.submit t(".confirm"), class: "cm-btn" %>
        </div>
      </fieldset>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>