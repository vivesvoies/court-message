<%= content_for :back do %>
  <%= link_to t(:back), root_path, class: "cm-btn cm-btn--icon-left fr-icon-arrow-left-line" %>
<% end %>
<%= render partial: "menu" %>
<div class="Page Page__forgot-password">
  <div class="Block Block__forgot-password">
    <h1><%= t(".forgot_your_password") %></h1>
    
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      
      <fieldset class="fr-fieldset">
        <%= render "devise/shared/error_messages", resource: resource %>
      
        <div class="fr-fieldset__element fr-input-group">
          <%= f.label :email, class: "fr-label" do %>
            <%= t("devise.shared.forms.identifier") %>
            <span class="fr-hint-text"><%= t("devise.shared.forms.id_hint") %></span>
          <% end %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", aria_required: true, class: "fr-input" %>        
        </div>
      </fieldset>
    
      <fieldset class="fr-fieldset">
        <div class="fr-fieldset__element cm-btns-group">
          <%= f.submit t(".send_me_reset_password_instructions"), class: "cm-btn" %>
        </div>
      </fieldset>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>