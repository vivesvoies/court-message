<div class="Page Page__sign-in">
  <div class="Block Block__sign-in">
    <header class="SiteIntro">
      <div>
        <h1 class="SiteIntro__title"><%= t("text.welcome") %></h1>
        <p class="SiteIntro__text">
          <%= t("text.intro") %>
        </p>
      </div>
      <%= image_tag "cm-logo.svg", class: "SiteIntro__logo",  alt: t(".logo-alt") %>
    </header>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <fieldset class="fr-fieldset">
        <div class="fr-fieldset__element fr-input-group">
          <%= f.label :email, class: "fr-label" do %>
            <%= t("devise.shared.forms.identifier") %>
            <span class="fr-hint-text"><%= t("devise.shared.forms.id_hint") %></span>
          <% end %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", aria_required: true, class: "fr-input" %>        
        </div>
      
        <div class="fr-fieldset__element fr-input-group">
          <%= f.label :password, class: "fr-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "fr-input fr-password__input", aria_required: true %>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to t("devise.shared.links.forgot_your_password"), new_password_path(resource_name), class: "fr-link" %>
          <% end %>
        </div>
      </fieldset>
      <fieldset class="fr-fieldset">
        <div class="fr-fieldset__element cm-btns-group">
          <% if devise_mapping.rememberable? %>
            <div class="fr-fieldset__element fr-checkbox-group fr-checkbox-group--sm">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          <%= f.submit t(".sign_in"), class: "cm-btn" %>
        </div>
      </fieldset>
    <% end %>
    
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <hr>
      <h2><%= t(".no_account") %></h2>
      <ul class="cm-btns-group">
        <li>
          <%= link_to t("devise.shared.links.sign_up"), new_registration_path(resource_name), class: "cm-btn cm-btn--secondary" %>
        </li>
      </ul>
    <% end %>
  </div>
</div>
