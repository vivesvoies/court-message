<details class="UserMenu cm-dropdown" data-controller="dropdown" data-dropdown-item-class="cm-menu-item">
  <summary class="UserMenu__button cm-dropdown__btn">
    <%= current_user.name %>
    <i class="cm-icon-chevron-down cm-icon--sm"></i>
  </summary>
  <div class="UserMenu__content cm-menu cm-dropdown__content">
    <%= link_to edit_user_registration_path, class: "cm-menu-item", data: { turbo_frame: "_top" , turbo_action: :advance } do %>
      <i class="cm-icon-settings"></i>
      <%= t(".edit_profile") %>
    <% end %>
    <%= button_to t(:sign_out), destroy_user_session_path, method: :delete, class: "cm-menu-item cm-btn--icon-left cm-icon-logout" , data: { turbo_frame: "_top" } if signed_in? %>
  </ul>
</details>