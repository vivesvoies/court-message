<%= content_for :back do %>
  <%= link_to t(".back"), teams_path, class: "fr-btn fr-btn--icon-left fr-fi-arrow-left-line" %>
<% end %>
<%= render partial: "menu" %>
<div class="Page Page__edit-team">
  <div class="Block Block__edit-team">
    <header class="Teams__header">
      <h1><%= t(".edit") %></h1>
    </header>
    <%= render "form", team: @team %>
  </div>

  <div class="Block Block__team-members">
    <%= turbo_frame_tag "team_members" do %>
      <%= render partial: "team_details" %>
    <% end %>
  </div>
</div>