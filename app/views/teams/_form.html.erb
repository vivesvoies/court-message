<%= form_with(model: team) do |form| %>
  <% if team.errors.any? %>
    <%= render partial: "model_errors", locals: { model: team } %>
  <% end %>

  <fieldset class="cm-fieldset">
    <div class="cm-fieldset__element cm-input-group">
      <%= form.label :name, class: "cm-label" %>
      <%= form.text_field :name, class: "cm-input" %>
    </div>

    <div class="cm-fieldset__element cm-input-group">
      <%= form.label :address, class: "cm-label" %>
      <%= form.text_area :address, class: "cm-input", rows: 4 %>
    </div>

  </fieldset>

  <fieldset class="cm-fieldset">
    <div class="cm-fieldset__element cm-btns-group--right">
      <div class="cm-btn cm-btn--pomme">
        <i class="cm-icon--sm cm-icon-checkmark"></i>
        <%= form.submit team.new_record? ? t(".create") : t(".update") %>
      </div>
    </div>
  </fieldset>
<% end %>
