<%= form_with(model: team) do |form| %>
  <% if team.errors.any? %>
    <%= render partial: "model_errors", locals: { model: team } %>
  <% end %>

  <fieldset class="cm-fieldset">
    <div class="cm-fieldset__element cm-input-group">
      <%= form.label :name, class: "cm-label" %>
      <%= form.text_field :name, class: "cm-input" %>
    </div>

    <div class="cm-fieldset__element cm-input-group">
      <%= form.label :address, class: "cm-label" %>
      <%= form.text_area :address, class: "TeamForm__textarea cm-input", rows: 4 %>
    </div>

  </fieldset>
  <div class="TeamEdit__actions">
    <%= button_tag t(:update), type: 'submit', class: "cm-btn cm-btn--validate cm-btn--icon-left cm-icon-checkmark" %>
    <%= link_to t(:cancel), team_conversations_path(@team), class: "cm-btn cm-btn--secondary" %>
  </div>

<% end %>
