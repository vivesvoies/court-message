<%= form_with(model: team) do |form| %>
  <% if team.errors.any? %>
    <%= render partial: "model_errors", locals: { model: team } %>
  <% end %>

  <fieldset class="cm-fieldset">
    <div class="cm-fieldset__element fr-input-group">
      <%= form.label :name, class: "fr-label" %>
      <%= form.text_field :name, class: "fr-input" %>
    </div>

    <div class="cm-fieldset__element fr-input-group">
      <%= form.label :address, class: "fr-label" %>
      <%= form.text_area :address, class: "fr-input", rows: 4 %>
    </div>

  </fieldset>

  <fieldset class="cm-fieldset">
    <div class="cm-fieldset__element cm-btns-group">
      <%= form.submit team.new_record? ? t(".create") : t(".update"), class: "cm-btn" %>
    </div>
  </fieldset>
<% end %>
